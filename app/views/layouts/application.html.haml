!!!
%html{lang:"es"}
  %head
    %title Servican Pet Center
    = stylesheet_link_tag    'application', params[:controller], media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = metamagic 
    %meta{:property =>"og:title", :content => "Servican Pet Center"}
    %meta{:property =>"og:site_name", :content => "Servican Pet Center"}
    %meta{:property =>"og:description", :content => "Clínica veterinaria en Santo Domingo fundada por el Dr. José Raúl Nova."}
    %meta{:name => "google-site-verification", :content => "qf5TDRCCUhkMXRP-G9qpbAGPGjQktr0kf3WyHg6_3Mo"}
    = favicon_link_tag 'favicon.ico'
    = analytics_init if Rails.env.production?
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}
    %link{:rel => "apple-touch-icon-precomposed", :href => "/custom_icon_precomposed.png"}
    %link{:href=>"https://fonts.googleapis.com/css?family=Lato|Merriweather&display=swap", :rel=>"stylesheet"}

  %body
    #all
      #main{:class => "#{params[:controller]}"}
        = render "layouts/videobg" if controller_name == 'welcome'
        = render "layouts/header" if controller_name == 'welcome'
        = yield
